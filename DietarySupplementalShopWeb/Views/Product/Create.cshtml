@model DataAccess.DataAccess.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProductId" class="control-label"></label>
                <input asp-for="Product.ProductId" id="productId" class="form-control" />
                <span asp-validation-for="Product.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PictureLink" class="control-label"></label>
                <input asp-for="Product.PictureLink" class="form-control" />
                <span asp-validation-for="Product.PictureLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>



            <div class="form-group" hidden>
                <label asp-for="ProductInformation.ProductId" class="control-label"></label>
                <input asp-for="ProductInformation.ProductId" id="productInfoId" class="form-control" readonly />
                <span asp-validation-for="ProductInformation.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.ProductTypeId" class="control-label"></label>
                <select asp-for="ProductInformation.ProductTypeId" class="form-control" id="ProductType">
                    <option value="Dig">Dig</option>
                    <option value="Ey">Ey</option>
                    <option value="Hi">Hi</option>
                    <option value="Li">Li</option>
                    <option value="Re">Re</option>
                    <option value="Sk">Sk</option>
                    <option value="Sleep">Sleep</option>
                    <option value="We">We</option>
                </select>
                <span asp-validation-for="ProductInformation.ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.Quantity" class="control-label"></label>
                <input asp-for="ProductInformation.Quantity" class="form-control" />
                <span asp-validation-for="ProductInformation.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.Price" class="control-label"></label>
                <input asp-for="ProductInformation.Price" class="form-control" />
                <span asp-validation-for="ProductInformation.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.Exp" class="control-label"></label>
                <input asp-for="ProductInformation.Exp" class="form-control" />
                <span asp-validation-for="ProductInformation.Exp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.Origin" class="control-label"></label>
                <input asp-for="ProductInformation.Origin" class="form-control" />
                <span asp-validation-for="ProductInformation.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation.SoldAmount" class="control-label"></label>
                <input asp-for="ProductInformation.SoldAmount" class="form-control" />
                <span asp-validation-for="ProductInformation.SoldAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" onclick="setProductID()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function setProductID() {
        document.getElementById("productInfoId").value = document.getElementById("productId").value;
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
